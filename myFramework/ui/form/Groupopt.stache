<div class="row has-padding mobi-input {{_align}} no-margin divider select" >
	<span class="cell-4">{{label}}</span>
	{{#if _options}}
		<select class="cell-12 no-border " {{formValue}}>
			{{#each _options}}
				<optgroup label={{value}}>  
					{{#each opt}}
			        	<option value={{key}}>{{txt}}</option>  
			        {{/each}}
			    </optgroup> 
			{{/each}}
		</select>

	{{else}}
		<slect>
			<option>Loading Text </option>
		</select>
	{{/if}}
</div>

